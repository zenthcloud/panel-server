{
    "compilerOptions": {
      "target": "ES2020",                         // Compatible avec Node.js moderne
      "module": "ESNext",                         // Utilise les modules ESM
      "moduleResolution": "node",                 // Résolution des modules selon Node.js
      "outDir": "./dist/backend",                 // Le dossier où seront générés les fichiers compilés
      "esModuleInterop": true,                    // Permet d'importer des modules CommonJS
      "skipLibCheck": true,                       // Ignore les vérifications de types dans les bibliothèques
      "forceConsistentCasingInFileNames": true,   // Assure une cohérence dans la casse des noms de fichiers
      "strict": true,                             // Active les options strictes de vérification des types
      "noImplicitAny": true,                      // Empêche l'utilisation de types "any" implicites
      "noUnusedLocals": false,                    // Désactiver les erreurs pour les variables inutilisées
      "noUnusedParameters": false,                // Désactiver les erreurs pour les paramètres inutilisés
      "resolveJsonModule": true,                  // Permet d'importer des fichiers JSON
      "allowSyntheticDefaultImports": true        // Permet les imports par défaut pour les modules CommonJS
    },
    "exclude": [
      "node_modules",                             // Exclut le dossier node_modules
      "dist"                                      // Exclut le dossier de sortie dist
    ]
}