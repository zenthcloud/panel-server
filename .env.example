# -------------------------------
# Application
# -------------------------------
APP_NAME=ZenthCloud
APP_ENV=production       # production, development, testing
APP_DEBUG=false
APP_URL=https://panel.zenthcloud.net
API_URL=https://api.zenthcloud.com

# -------------------------------
# Server & Backend
# -------------------------------
# PHP / Backend
PHP_FPM_HOST=127.0.0.1
PHP_FPM_PORT=9000

# Database (PostgreSQL/MySQL)
DB_CONNECTION=pgsql       # pgsql or mysql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=zenthcloud
DB_USERNAME=zenth_user
DB_PASSWORD=secure_password_here
DB_SCHEMA=public

# Redis / Cache
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# -------------------------------
# Mail / SMTP
# -------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailserver.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=email_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@zenthcloud.com
MAIL_FROM_NAME="Zenth Cloud"

# -------------------------------
# Security & Encryption
# -------------------------------
APP_KEY=base64:GENERATE_A_KEY
JWT_SECRET=generate_a_jwt_secret_here
ENCRYPTION_KEY=generate_an_encryption_key_here

# -------------------------------
# External Services / APIs
# -------------------------------
API_KEY_SERVICE_1=your_api_key_here
API_SECRET_SERVICE_1=your_api_secret_here

API_KEY_SERVICE_2=your_api_key_here
API_SECRET_SERVICE_2=your_api_secret_here

# -------------------------------
# Logging
# -------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=info

# -------------------------------
# Miscellaneous
# -------------------------------
TIMEZONE=Europe/Brussels
LOCALE=en
